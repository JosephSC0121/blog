---
import { SITE_DESCRIPTION, SITE_TITLE } from "../config";
import Footer from "./footer.astro";
import Header from "./header.astro";
import Meta from "./meta.astro";

type Props = {
  title?: string;
  description?: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" class="text-white-800">
  <head>
    <!-- Google tag (gtag.js) -->
    <script
    is:inline type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-QDRYY7YJLN"></script>
    <script is:inline type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag('config', 'G-QDRYY7YJLN')
    </script>

    <Meta
      title={title ? `${title} Â· ${SITE_TITLE}` : SITE_TITLE}
      description={description ?? SITE_DESCRIPTION}
    />
  </head>

  <body>
    <div class="flex flex-col h-full mb-8 overflow-y-scroll antialiased">
      <Header />
      <div class="flex-auto">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
