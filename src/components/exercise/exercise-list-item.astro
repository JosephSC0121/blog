---
import type { CollectionEntry } from "astro:content";
import DateTag from "../date-tag.astro";
import Tag from "../tag.astro";

type Props = {
  exercise: CollectionEntry<"blog">;
};

const { exercise } = Astro.props;
---

<div class="flex flex-col gap-4">
  {
    exercise.slug && (
      <a href={`/exercises/${exercise.slug}`} target="_self">
        <img
          src={exercise.data.cover ? `${exercise.data.cover}?w=800&q=80` : ""}
          alt="cover"
          class="w-full aspect-video rounded-lg self-auto object-cover"
        />
      </a>
    )
  }
  <div class="flex flex-col gap-2">
    <div class="flex gap-2">
      <DateTag date={exercise.data.date} />
      {exercise.data.tags?.map((tag) => <Tag tag={tag} />)}
    </div>
    <a href={`/exercises/${exercise.slug}`} target="_self">
      <h1 class="text-3xl font-title font-black">{exercise.data.title}</h1>
    </a>
    <a href={`/exercises/${exercise.slug}`} target="_self">
      <p class="text-sm text-white">{exercise.data.description}</p>
    </a>
  </div>
</div>
