---
import Layout from "../components/layout.astro";
import ExerciseListing from "../components/exercise/exercise-list.astro";
import { exercises } from "../helpers";
---

<Layout>
  <div class="bg-purple-300 py-6 sm:py-8">
    <div class="max-w-screen-xl font-bold mx-auto px-4 sm:px-7 text-center">
      <p class="text-sm sm:text-base text-gray-900">
        Experimentos, ideas y soluciones técnicas — una bitácora de código útil (y algo nerd).
      </p>
    </div>
  </div>
    <h2 class="text-4xl font-bold max-w-screen-xl mx-auto p-6 sm:px-8 text-center">Posts</h2>
    <ExerciseListing exercises={exercises} />
</Layout>

