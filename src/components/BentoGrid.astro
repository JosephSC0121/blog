---
const items = [
  true,
  true,
  false
  ];
---
<div class="max-w-screen-xl mx-auto px-4 py-12 flex flex-wrap">
  {
    items.map((isGreen, index) => (
      <div class="w-1/3 sm:w-1/6 md:w-1/10 p-2">
        <a
          href={`https://projecteuler.net/problem=${index + 1}`}
          class={`block p-4 text-center rounded-lg ${
            isGreen ? "bg-green-900" : "bg-red-900"
          }`}
        >
          <h3 class="text-lg font-medium text-white">{index + 1}</h3>
        </a>
      </div>
    ))
  }
  </div>
