---
import { type CollectionEntry } from "astro:content";
import ExerciseListItem from "./exercise-list-item.astro";

type Props = {
  exercises: CollectionEntry<"blog">[];
};

const { exercises } = Astro.props;
---

<div
  class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-y-10 gap-x-0 sm:gap-x-10 max-w-screen-2xl mx-auto px-4 py-12 sm:px-8"
>
  {(exercises ?? []).map((exercise) => <ExerciseListItem exercise={exercise} />)}
</div>
